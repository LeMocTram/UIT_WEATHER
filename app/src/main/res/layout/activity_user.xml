<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".UserActivity"
    android:background="@drawable/background"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginVertical="200dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"

                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:text="User Information"
                android:textColor="#00BCD4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                />

            <TextView

                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:text="Realm :"
                android:id="@+id/tv1"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:text="RealmId :"
                android:id="@+id/tv2"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2"
                android:text="Id :"
                android:id="@+id/tv3"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:text="Enabled :"
                android:id="@+id/tv4"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv4"
                android:text="CreatedOn :"
                android:id="@+id/tv5"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv5"
                android:text="ServiceAccount :"
                android:id="@+id/tv6"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv6"
                android:text="Username :"
                android:id="@+id/tv7"
                android:textColor="@color/black"
                />
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:id="@+id/tvRealm"
                android:layout_below="@+id/tv_title"
                android:layout_toRightOf="@+id/tv1"
                android:text="Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:id="@+id/tvRealmID"
                android:text="Text"
                android:layout_below="@+id/tvRealm"
                android:layout_toRightOf="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:id="@+id/tvID"
                android:text="Text"
                android:layout_below="@+id/tvRealmID"
                android:layout_toRightOf="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:id="@+id/enabled"
                android:text="Text"
                android:layout_below="@+id/tvID"
                android:layout_toRightOf="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:id="@+id/createdOn"
                android:text="Text"
                android:layout_below="@+id/enabled"
                android:layout_toRightOf="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:id="@+id/serviceAccount"
                android:text="Text"
                android:layout_below="@+id/createdOn"
                android:layout_toRightOf="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:id="@+id/username"
                android:text="Text"
                android:layout_below="@+id/serviceAccount"
                android:layout_toRightOf="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>